<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Intent_1">
    
    <TextView
        android:id="@+id/implicit_intent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="암시적 인탠트"/>

    <TextView
        android:id="@+id/intent_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="명시적 인탠트1"/>

    <TextView
        android:id="@+id/intent_two"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="명시적 인탠트2"/>

    <TextView
        android:id="@+id/intent_three"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="명시적 인텐트 + 데이터"/>

    <TextView
        android:id="@+id/intent_four"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="명시적 인텐트 + result"/>

    <TextView
        android:id="@+id/intent_five"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="명시적 인텐트 + Activity_Result API"/>

    <TextView
        android:id="@+id/intent_six"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="명시적 인텐트 + Action"/>

</androidx.appcompat.widget.LinearLayoutCompat>